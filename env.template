# Supabase Configuration (Required)
# Get these from your Supabase Project Settings: https://supabase.com/dashboard/project/_/settings/api
NEXT_PUBLIC_SUPABASE_URL=your_supabase_project_url_here
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_anon_key_here
DATABASE_URL="postgresql://your_database_connection_string_here"
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# Stripe Configuration (Required for payment processing)
# Get these from your Stripe Dashboard: https://dashboard.stripe.com/apikeys
# IMPORTANT: Use NEXT_PUBLIC_ prefix for client-side variables
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here

# Stripe Webhook Secret (Required for webhook verification)
# Get this from your Stripe Dashboard webhook settings
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Twilio Configuration (Phone Verification)
# Get these from your Twilio Console: https://console.twilio.com/
TWILIO_ACCOUNT_SID=your_twilio_account_sid_here
TWILIO_AUTH_TOKEN=your_twilio_auth_token_here
TWILIO_VERIFY_SERVICE_SID=your_twilio_verify_service_sid_here

# DocuSign Configuration (Phase 2 Integration)
# Get these from your DocuSign Developer Account: https://developers.docusign.com/
DOCUSIGN_INTEGRATION_KEY=your_docusign_integration_key_here
DOCUSIGN_USER_ID=your_docusign_user_id_here
DOCUSIGN_ACCOUNT_ID=your_docusign_account_id_here
DOCUSIGN_PRIVATE_KEY="-----BEGIN RSA PRIVATE KEY-----\nyour_private_key_content_here\n-----END RSA PRIVATE KEY-----"
DOCUSIGN_BASE_PATH=https://demo.docusign.net/restapi

# Application Configuration
NEXTAUTH_SECRET=your_nextauth_secret_here

# Base URL (used for auth, DocuSign callbacks, webhooks, and all redirects)
# Change to https://your-domain.com for production
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Email Configuration
EMAIL_SERVER_USER=your_email_server_user_here
EMAIL_SERVER_PASSWORD=your_email_server_password_here
